<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:background="@color/whitebackground"
    android:layoutDirection="rtl"
    android:textAlignment="center"

    android:focusable="false"
    android:focusableInTouchMode="false"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/background"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:background="@drawable/background"

                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/wv_tool_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/txtflollower"
                android:layout_weight="0"
                android:layout_marginBottom="1dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="price"
                    android:gravity="left"
                    android:id="@+id/txt_tool_price"
                    android:textSize="18dp"
                    android:textColor="#db1212"
                    android:textStyle="bold"
                    android:layout_weight="0" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Tool Name"
                    android:id="@+id/txt_tool_name"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_toLeftOf="@+id/webView"
                    android:layout_toRightOf="@+id/bufolowSubscrible"
                    android:layout_toEndOf="@+id/bufolowSubscrible"
                    android:layout_weight="0"
                    android:textColor="#0894f8"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:paddingRight="1dp" />

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="دورة برمجة جافا هذه الدورة تشرح الجافا من الأساسيات الى مرحلة الأحتراف تشرح مختلف مواضيع من البداية الى قواعد البيانات ."
                    android:id="@+id/txt_tool_desc"
                    android:layout_alignParentTop="true"
                    android:gravity="right"


                    android:background="@color/white"
                    android:layout_toLeftOf="@+id/webView"
                    android:layout_toRightOf="@+id/bufolowSubscrible"
                    android:layout_toEndOf="@+id/bufolowSubscrible"
                    android:paddingBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <TextView
                    android:paddingEnd="1dp"
                    android:gravity="end"
                    android:layout_weight="0"
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2015-12-11"
                    android:textSize="10dp"

                    android:id="@+id/txt_tool_date"
                    android:textStyle="italic" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>